.side_bar
  .leftheader
    .leftheader__list
      %h3.leftheader__user-name
        = current_user.name
      %ul.leftheader__iconlist
        %li.leftheader__icon
          = link_to new_group_path do 
            = icon('fas', 'edit')
        %li.leftheader__icon   
          = link_to edit_user_path(current_user) do           
            = icon('fas', 'cog')

  .grouplist
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
